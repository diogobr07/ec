<% if @session.errors.has_key? :base %>
	<div class="alert alert-danger">
		<%= @session.errors[:base].join(', ') %>
	</div>
<% end %>
<%= form_for [:admin, @session], html: { class: "form-signin", role: "form" } do |f| %>
	<h2 class="form-signin-heading">EC Please sign in</h2>
	
	<%= f.text_field :email, class: "form-control", placeholder: "Email address" %>
	
	<%= f.password_field :password, class: "form-control", placeholder: "Password" %>

	<%= f.submit 'Sign in', class: "btn btn-lg btn-primary btn-block" %>
<% end %>
